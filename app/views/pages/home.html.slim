/ Carousel Styles
css:
  .carousel-container {
    position: relative;
    width: 100%;
    min-height: 600px;
  }

  .carousel-slide {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    min-height: 600px;
    opacity: 0;
    transition: opacity 0.8s ease-in-out;
    pointer-events: none;
    z-index: 1;
  }

  /* Mobile responsiveness */
  @media (max-width: 768px) {
    .carousel-container {
      min-height: 600px;
    }
    
    .carousel-slide {
      min-height: 600px;
    }
    
    .carousel-slide h1 {
      font-size: 2rem !important;
      line-height: 1.2 !important;
    }
    
    .carousel-slide p {
      font-size: 1rem !important;
    }
    
    .carousel-slide img {
      max-width: 280px !important;
    }
  }

  .carousel-slide.active {
    opacity: 1;
    pointer-events: auto;
    z-index: 2;
  }

  .carousel-dot {
    z-index: 50;
    cursor: pointer;
    pointer-events: auto;
  }

  .carousel-dot.active {
    opacity: 1 !important;
  }

  @media (max-width: 768px) {
    .carousel-dot {
      width: 12px !important;
      height: 12px !important;
    }
  }

                    | Test Mode
                .flex.items-center
                  = link_to "#cunningfx", class: "text-blue-700 hover:text-blue-900 underline" do
                    | CunningFX
                .flex.items-center
                  = link_to "#port-configuration", class: "text-blue-700 hover:text-blue-900 underline" do
                    | Port Configuration
              .space-y-2
                .flex.items-center

<% content_for :title, "#{@page_title || @board_name.titleize} - Baldrick Board Documentation" %>

<!-- Board Submenu -->
<%= render 'boards/shared/board_submenu', 
    board_name: @board_name.titleize,
    menu_items: board_menu_items(@board_name) %>

<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Breadcrumb -->
  <nav class="text-sm text-gray-500 mb-6">
    <div class="flex items-center space-x-2">
      <a href="/" class="hover:text-gray-700 transition-colors">Home</a>
      <svg class="h-4 w-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
      </svg>
      <a href="/boards" class="hover:text-gray-700 transition-colors">Boards</a>
      <svg class="h-4 w-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
      </svg>
      <% if @page.present? %>
        <a href="/boards/<%= @board_name %>" class="hover:text-gray-700 transition-colors"><%= @board_name.titleize %></a>
        <svg class="h-4 w-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
        </svg>
        <span class="text-gray-900 font-medium"><%= @page.titleize %></span>
      <% else %>
        <span class="text-gray-900 font-medium"><%= @board_name.titleize %></span>
      <% end %>
    </div>
  </nav>

  <!-- Main Content Card -->
  <div class="bg-white rounded-lg shadow-lg overflow-hidden">
    <!-- Header Section -->
    <%= render 'shared/page_header', 
        title: @page_title || @board_name.titleize,
        subtitle: @page_subtitle || "Documentation for #{@board_name.titleize}",
        image_url: @page_image_url,
        image_alt: @page_image_alt %>

    <!-- Content Section -->
    <div class="px-8 py-8">
      <div class="max-w-4xl mx-auto">
        <%= yield %>
      </div>
    </div>
  </div>
</div>

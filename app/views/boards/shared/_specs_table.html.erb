<!-- Reusable Specifications Table -->
<div class="bg-white rounded-lg shadow-md overflow-hidden">
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Feature</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Specification</th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% specs.each do |spec| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= spec[:feature] %></td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500"><%= spec[:value] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

- content_for :title, "Interactive Controllers - Baldrick Board Documentation"

.max-w-6xl.mx-auto.px-4.sm:px-6.lg:px-8.py-8
  / Breadcrumb
  = render 'shared/breadcrumbs', breadcrumbs: page_breadcrumbs('Home', 'Boards', 'Interactive Controllers')

  / Main Content Card
  .bg-white.rounded-lg.shadow-lg.overflow-hidden
    / Header Section
    = render 'shared/page_header', 
        title: 'Interactive Controllers',
        subtitle: 'Input and interaction control for interactive installations',
        image_url: 'baldrickinput1/board.png',
        image_alt: 'Interactive Controllers'

    / Content Section
    .px-8.py-8
      .max-w-4xl.mx-auto
        .grid.md:grid-cols-2.lg:grid-cols-3.gap-6
          = board_card('baldrickinput1')
          = board_card('baldrickinput8')
          = board_card('baldricksignals')

/ Page Header Component
.bg-gradient-to-r.from-indigo-600.to-purple-600.px-8.py-12.text-white.relative.overflow-hidden
  .max-w-4xl.mx-auto.relative.z-10
    h1.text-4xl.font-bold.mb-4 = local_assigns[:title]
    - if local_assigns[:subtitle].present?
      p.text-xl.text-indigo-100 = local_assigns[:subtitle]
  
  - if local_assigns[:image_url].present?
    / Overlapping Image
    .absolute.right-0.top-0.bottom-0.w-1/3.opacity-20
      = image_tag local_assigns[:image_url], alt: (local_assigns[:image_alt] || local_assigns[:title]), class: "w-full h-full object-cover"

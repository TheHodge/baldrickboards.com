- content_for :title, "Fun Stuff - Baldrick Board Documentation"

.max-w-6xl.mx-auto.px-4.sm:px-6.lg:px-8.py-8
  / Breadcrumb
  nav.text-sm.text-gray-500.mb-6
    .flex.items-center.space-x-2
      = link_to "Home", "/", class: "hover:text-gray-700 transition-colors"
      svg.h-4.w-4.text-gray-400 fill="currentColor" viewBox="0 0 20 20"
        path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"
      span.text-gray-900.font-medium Fun Stuff

  / Main Content Card
  .bg-white.rounded-lg.shadow-lg.overflow-hidden
    / Header Section
    = render 'shared/page_header', title: 'Fun Stuff', subtitle: 'Fun stuff, downloads, and interesting tidbits about Baldrick Boards', image_url: '/img/baldrick.jpg', image_alt: 'Fun Stuff'

    / Content Section
    .px-8.py-8
      .max-w-4xl.mx-auto
        .grid.md:grid-cols-2.lg:grid-cols-3.gap-6
          
          / Release Notes
          .bg-gray-50.rounded-lg.border.border-gray-200.overflow-hidden.group.hover:shadow-lg.hover:border-purple-300.hover:bg-purple-50.transition-all.duration-300.transform.hover:-translate-y-1
            = link_to fun_stuff_release_notes_path, class: "block no-underline" do
              .h-48.bg-gray-200.overflow-hidden.flex.items-center.justify-center
                .text-gray-400.text-center
                  svg.h-16.w-16.mx-auto.mb-2 fill="none" stroke="currentColor" viewBox="0 0 24 24"
                    path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"
                  p.text-sm Release Notes
              .p-6
                .mb-4
                  h3.text-lg.font-semibold.text-gray-900.group-hover:text-purple-900.transition-colors.duration-300 Release Notes
                  span.text-sm.text-gray-500.group-hover:text-purple-600.transition-colors.duration-300 Latest Updates
                p.text-gray-600.mb-4.group-hover:text-gray-700.transition-colors.duration-300 Stay up to date with the latest firmware updates, new features, and improvements to Baldrick Boards.
                ul.text-sm.text-gray-600.mb-4.space-y-1.group-hover:text-gray-700.transition-colors.duration-300
                  li • Latest firmware releases
                  li • New feature announcements
                  li • Bug fixes and improvements
                  li • Version history

          / STLs & Mounts
